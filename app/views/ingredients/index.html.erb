<%= render 'shared/page_title', title: "All Ingredients" %>

<div class="text-center">

  <%= will_paginate %>

  <% @ingredients.each do |ing| %>
  <ul class="listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <li class="chef-title"><%= link_to ing.name.capitalize, ingredient_path(ing) %></li>
        <li class="small"><%= pluralize(ing.recipes.count, "recipe") if ing.recipes %></li>
<% if logged_in? && current_chef.admin? %>
        <li><%= link_to "Edit this ingredient", edit_ingredient_path(ing) %></li>
<% end %>
      </div>
    </div>
  </ul>
  <% end %>

  <%= will_paginate %>

</div>
