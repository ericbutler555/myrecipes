<%= render 'shared/page_title', title: "All Chefs" %>

<div class="text-center">
  <% @chefs.each do |chef| %>
  <ul class="listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <li><%= link_to gravatar_for(chef), chef_path(chef) %></li>
        <li class="chef-title"><%= link_to chef.chefname, chef_path(chef) %></li>
        <li class="small"><%= pluralize(chef.recipes.count, "recipe") if chef.recipes %></li>
      </div>
    </div>
  </ul>
  <% end %>
</div>